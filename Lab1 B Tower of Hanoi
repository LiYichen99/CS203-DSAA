import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
	Scanner input = new Scanner(System.in);
	int T = input.nextInt();
	for(int i = 0; i<T; i++){
	    int n = input.nextInt();
	    long m = 1;
	    for(int j = 1; j <= n;j++){
	    	m =  m * 3 % 1000000007;
		}
	    System.out.println(m-1);
    }
	input.close();
    }

}
